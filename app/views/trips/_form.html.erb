<%= form_with(model: trip, local:true) do |form| %>
  <% if trip.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(trip.errors.count, "error") %> prohibited this trip from being saved:</h2>

      <ul>
        <% trip.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group mb-3">
    <%= form.label :planet_id , class:"form-label" %>
    <%= form.select :planet_id, @planets.map {|p| [p.name, p.id]}, class: "form-select" %>
  </div>

  <h5 class="mb-2 ml-2"> Cabins </h5>

  <div class="form-check mb-3">
      <%=form.collection_radio_buttons :cabin_id, @cabins, :id, :name do |b| %>
      <%= b.label class: "form-label" %>
      <%= b.radio_button class: "form-check-line mr-2" %>
    <%end%>
  </div>

 <div class="form-group mb-3 ml-2">
    <%= form.label :price , class:"col form-label" %>  
    <%= form.number_field :price, step: "0.01" %>
</div>

<div class="form-group mb-3 ml-2">
    <%= form.label :picture , class:"col form-label" %>  
    <%= form.file_field :picture, class: "form-control-file", accept: "image/jpg,image/png" %>
</div>

  <div class="form-group mb-3">
    <%= form.submit %>
  </div>

  

<% end %>
